/* -------------------------------------------------------- */
/* Buttons */
.btn-bar {text-align: right;}
.btn, input[type=submit] {
	background: #B11623;
	border: none;
	border-left: 2px solid rgba(0,0,0,.3);
	color: #fff;
	display: inline-block;
	font-size: 16px;
	text-transform: uppercase;
	font-weight: bold;
	margin-left: 10px;
	padding: 2px 8px;
	position: relative;
	text-align: left;
	text-decoration: none;
}
.btn i, .btn span {color: #fff;}
.btn-cancel {
	background: #bbb !important;
}
.btn:hover {opacity: .8;}
.btn-bar-interact .btn {font-size: 120%;}

.btn-sidebar {
	text-align: left;
}
.btn-sidebar .btn {
	border-left-width: 0px;
	display: block;
	margin: 0;
	margin-bottom: 12px;
	padding: 12px 8px 12px 8px;
	text-align: center;
}
.fbtn-sidebar .btn:hover {
	border-left-width: 8px;
	padding: 12px 8px 12px 0px;
}

.btn, input[type=submit] {
color: #000;
background: #dcc;
border-left: 5px solid #B11623;
}
.btn i, .btn span {color: #000;}
.btn-sidebar .btn {
	border-left: 5px solid #B11623;
}


/* -------------------------------------------------------- */
/* Admin Items */
#admin-version {background: #eee;}

.admin-button {
	background: #b33;
	box-sizing: border-box;
	color: #fff !important;
	display: block;
	font-size: 20px;
	font-weight: bold;
	height: 200px;
	padding: 20px;
	text-align: center;
	text-decoration: none;
	text-transform: uppercase;
}

.admin-button.done {
	background: #3b3;
}


.admin-button i {
	display: block;
	color: #fff;
	font-size: 130px;
}

.admin-button:hover {
	text-decoration: none;
}

#admin-version .hidden {
	background: #ccc;
	border: 1px solid #333;
	border-right: 8px solid #333;
	box-sizing: border-box;
	padding: 8px;
	position: relative;
}

#admin-version .hidden:after {
	content: "Hidden";
	position: absolute;
	top: 0px;
	right: 0px;
	font-size: 9px;
	font-weight: bold;
	padding: 3px 0px 3px 6px;
	background: #333;
	color: #fff;
	letter-spacing: 1px;
	border-bottom-left-radius: 8px;
}



/* -------------------------------------------------------- */
/* Mobile */
@media screen and (max-width : 960px) {
	/* -------------------------------------------------------- */
	/* Base Setters */
	body {padding-top: 70px !important;}
	.hide {display: none !important;}
	
	
	/* -------------------------------------------------------- */
	/* Header */
	header {
		position: absolute;
		top: 0;
		width: 100%;
		z-index: 100;
	}
	
	header nav#main .show-menu {
		display: block;
		float: right;
	}
	
	header nav#main ul {
		clear: both;
		display: none;
		position: static;
	}
	
	header nav#main ul li {
		display: block;
		margin: 0;
		margin-top: 2px;
		text-align: center;
	}

	header nav#main ul li a {display: block;}
	header nav#main a, header .header-menu-small a {line-height: 20px !important; font-size: 16px !important;}
	header nav#main li a {padding: 12px 0; background-color: #eee;}
	header nav#main ul li {border-bottom: 1px solid #bbb; margin: 0;}

	/* -------------------------------------------------------- */
	/* Footer */
	footer {font-size: 16px;}
	footer .divider:after {display: none;}
	footer a {display: block;}
	
	.beer-shortdesc {margin-left: 12px; margin-right: 12px;}
	.beer-shortdesc h2 {font-size: 20px;}
}

#snipcart-header h2,
.snip-ico--close {color: #fff !important;}
.edit-note, #your-notes {display: none;}