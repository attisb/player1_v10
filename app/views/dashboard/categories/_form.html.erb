<div class="page-form">
	<%= form_for [:dashboard, @category] do |f| %>
	<% if @category.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@category.errors.count, "error") %> prohibited this beer_size from being saved:</h2>
			<ul>
				<% @category.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="page-form-label"><%= f.label :name %></div>
	<div class="page-form-field"><%= f.text_field :name %></div>

	<div class="page-form-label"><%= f.label :description %></div>
	<div class="page-form-field"><%= f.text_area :description %></div>

	<div class="page-form-label"><%= f.label :bucket_type, "Which Area is this for?" %></div>
	<div class="page-form-field"><%= f.select :bucket_type, options_for_select(cat_options, :selected => f.object.bucket_type) %></div>

	<div class="btn-bar">
		<%= link_to 'Cancel', dashboard_categories_path, :class => 'btn btn-cancel'%>
		<%= f.submit 'Save Category' %>
	</div>
<% end %>
</div>