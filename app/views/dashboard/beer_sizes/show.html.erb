<% @title = "Dashboard // Drink Size // #{@beer_size.name}" %>

<div id="header-name">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h5><%= link_to 'Back to Drink Dashboard', dashboard_admin_drinks_path %></h5>
				<h1>Drink Style // <%= @beer_size.name -%></h1>
			</div>
		</div>
	</div>
</div>


<div class="container">
	<div class="row">
		<div class="col-8">
			<%= image_tag "http://placehold.it/300x300/333/fff?text=#{@beer_size.image}" %>
		</div>
			
		<div class="col-4">
			<div class="btn-bar btn-sidebar">
				<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i> Edit Drink Size'), edit_dashboard_beer_size_path(@beer_size), :class => 'btn' %>
				<%= link_to raw('<i class="fa fa-trash" aria-hidden="true"></i> Delete Drink Size'), dashboard_beer_size_path(@beer_size), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
				<%= link_to raw('<i class="fa fa-file-o" aria-hidden="true"></i> Create Drink Size'), new_dashboard_beer_size_path, :class => 'btn btn-cancel' %>
				<%= link_to 'Back to Beer Size List', dashboard_beer_sizes_path, :class => 'btn btn-cancel' %>
			</div>
		</div>
	</div>
</div>


