<div class="page-form">
	<%= form_for [:dashboard, @playlist] do |f| %>
	<% if @playlist.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@playlist.errors.count, "error") %> prohibited this playlist from being saved:</h2>
			<ul>
				<% @playlist.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="page-form-label"><%= f.label :name %></div>
	<div class="page-form-field"><%= f.text_field :name %></div>

	<div class="page-form-label"><%= f.label :direction %></div>
	<div class="page-form-field">
		<%= f.select :direction, [['Vertical', 'v'], ['Horizontal', 'h']] %>
	</div>

	<div class="page-form-label"><%= f.label :date_show %></div>
	<div class="page-form-field"><%= f.date_field :date_show %></div>

	<div class="page-form-label">
		<%= f.check_box :enabled %>
		<%= f.label :enabled %>
	</div>
	
	<div class="btn-bar">
		<%= link_to 'Cancel', dashboard_playlists_path, :class => 'btn btn-cancel'%>
		<%= f.submit 'Save Playlist' %>
	</div>
<% end %>
</div>