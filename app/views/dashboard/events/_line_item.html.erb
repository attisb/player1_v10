<li class="large">
	<a href="#"><strong><%= link_to event.title, [:dashboard, event] -%></strong></a>
	<div class="btn-bar">
		<span class="small">Date: <%= event.date %></span>
		<span class="divider"></span>
		<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i> Edit'), edit_dashboard_event_path(event), :class => 'btn' %>
		<%= link_to raw('<i class="fa fa-trash" aria-hidden="true"></i> Delete'), dashboard_event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
	</div>
</li>
