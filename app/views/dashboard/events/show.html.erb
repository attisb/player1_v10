<% @title = "Dashboard // Event // #{@event.title}" %>

<div id="header-name">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h5><%= link_to 'Back to Dashboard', dashboard_home_path %></h5>
				<h1>Event // <%= @event.title -%></h1>
			</div>
		</div>
	</div>
</div>


<div class="container">
	<div class="row">
		<div class="col-8">
			<%= simple_format @event.description %>
			<%= @event.date %>
		</div>
			
		<div class="col-4">
			<div class="btn-bar btn-sidebar">
				<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i> Edit Event'), edit_dashboard_event_path(@event), :class => 'btn' %>
				<%= link_to raw('<i class="fa fa-trash" aria-hidden="true"></i> Delete Event'), dashboard_event_path(@event), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
				<%= link_to raw('<i class="fa fa-file-o" aria-hidden="true"></i> Create Event'), new_dashboard_event_path, :class => 'btn btn-cancel' %>
				<%= link_to 'Back to Event List', dashboard_events_path, :class => 'btn btn-cancel' %>
			</div>
		</div>
	</div>
</div>
