<div class="page-form">
	<%= form_for [:dashboard, @event] do |f| %>
	<% if @event.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
			<ul>
				<% @event.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="page-form-label"><%= f.label :title %></div>
	<div class="page-form-field"><%= f.text_field :title %></div>

	<div class="page-form-label"><%= f.label :description %></div>
	<div class="page-form-field"><%= f.text_area :description %></div>

	<div class="page-form-label"><%= f.label :date %></div>
	<div class="page-form-field"><%= f.date_field :date %></div>
	
	<div class="page-form-label"><%= f.label :image %></div>
	<div class="page-form-field"><%= f.file_field :image %></div>
	
	<div class="page-form-label"><%= f.label :category_id %></div>
	<div class="page-form-field"><%= f.select :category_id, Category.where(bucket_type: 'event').collect {|p| [ p.name, p.id ] }, {include_blank: 'None'} %></div>

	<div class="btn-bar">
		<%= link_to 'Cancel', dashboard_events_path, :class => 'btn btn-cancel'%>
		<%= f.submit 'Save Event' %>
	</div>
<% end %>
</div>