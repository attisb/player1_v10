<% @title = "Dashboard // Events" %>

<div id="header-name">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h5><%= link_to 'Back to Dashboard', dashboard_home_path %></h5>
				<h1>Events</h1>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">

		<div class="col-8">
			<ul class="list-nostyle list-nosidemargin list-padlines list-addsplitlines">
				<% if @events.empty? %>
					<li><span class="alert-no-items">--- no items to show ---</span></li>
				<% else %>
					<% @events.each do |event| %>
						<%= render 'line_item', event: event %>
					<% end %>
				<% end %>
			</ul>
		</div>

		<div class="col-4">
			<div class="btn-bar btn-sidebar">
				<%= link_to 'Create a New Event', new_dashboard_event_path, :class => 'btn' %>
			</div>

			<h4>View Options</h4>
			<ul class="list-nostyle list-padlines">
				<li><%= link_to "View Upcoming 10 Events", dashboard_events_path %></li>
				<li><%= link_to "View Past 30 Events", dashboard_events_path(past: true) %></li>
			</ul>
		</div>
		
	</div>
</div>



