<% @title = "Dashboard // Drink // #{@drink.name}" %>

<div id="header-name">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h5><%= link_to 'Back to Drink Dashboard', dashboard_admin_drinks_path %></h5>
				<h1>Drink // <%= @drink.name -%></h1>
			</div>
		</div>
	</div>
</div>


<div class="container">
	<div class="row">
		<div class="col-8">
			<%= simple_format @drink.name %>
			
			<h4>Current Sizes Available</h4>
			<ul class="list-stats">
				<% @drink.prices.each do |price| %>
					<% if price.available? %>
					<li>
						<%= price.beer_size.name %>
						<span><%= number_to_currency price.amount %></span>
					</li>
					<% end %>
				<% end %>
			</ul>
		</div>
			
		<div class="col-4">
			<div class="btn-bar btn-sidebar">
				<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i> Edit Drink'), edit_dashboard_drink_path(@drink), :class => 'btn' %>
				<%= link_to raw('<i class="fa fa-trash" aria-hidden="true"></i> Delete Drink'), dashboard_drink_path(@drink), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
				<%= link_to raw('<i class="fa fa-file-o" aria-hidden="true"></i> Create Drink'), new_dashboard_drink_path, :class => 'btn btn-cancel' %>
				<%= link_to 'Back to Drink List', dashboard_drinks_path, :class => 'btn btn-cancel' %>
			</div>
		</div>
	</div>
</div>
