<% @title = "Dashboard // Screens" %>

<div id="header-name">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h5><%= link_to 'Back to Dashboard', dashboard_home_path %></h5>
				<h1>Screens</h1>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">

		<div class="col-8">
			<ul class="list-nostyle list-nosidemargin list-padlines list-addsplitlines">
				<% if @screens.empty? %>
					<li><span class="alert-no-items">--- no items to show ---</span></li>
				<% else %>
					<% @screens.each do |screen| %>
						<%= render 'line_item', screen: screen %>
					<% end %>
				<% end %>
			</ul>
		</div>

		<div class="col-4">
			<div class="btn-bar btn-sidebar">
				<%= link_to 'Create a New Screen', new_dashboard_screen_path, :class => 'btn' %>
			</div>
			
			<h4>View Options</h4>
			<ul class="list-nostyle list-padlines">
				<li><%= link_to "View All Screens", dashboard_screens_path %></li>
				<li><%= link_to "View Ad Screens Only", dashboard_screens_path(type: 'a') %></li>
				<li><%= link_to "View Menu Screens Only", dashboard_screens_path(type: 'm') %></li>
				<li><%= link_to "View Kiosks Only", dashboard_screens_path(type: 'k') %></li>
				<li><%= link_to "View Hybrid Screens Only", dashboard_screens_path(type: 'h') %></li>
			</ul>
		</div>
		
	</div>
</div>
