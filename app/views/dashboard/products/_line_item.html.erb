<li class="large">
	<a href="#"><strong><%= link_to product.name, [:dashboard, product] -%></strong></a>
	<div class="btn-bar">
		<span class="small">Available: <%= product.available %></span>
		<span class="divider"></span>
		<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i> Edit'), edit_dashboard_product_path(product), :class => 'btn' %>
		<%= link_to raw('<i class="fa fa-trash" aria-hidden="true"></i> Delete'), dashboard_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
	</div>
</li>
