<div>
<img height="70" src="<%= asset_path("head_logo.png") %>" />
<h1 class="nomargin text-right">Game Menu</h1>
<div style="position: absolute; top: 0; right: 0; text-transform: uppercase;">Next Gen consoles has an additional charge.</div>
</div>

	<h3><%= @game_console.name -%></h3>
<div class="columns">
	<ul class="list-nostyle list-nosidemargin list-stats">
	<% @games.order(name: :asc).each do |game| %>
				<li class="nowrap item">
					<strong><%= game.name -%></strong>
					<span><%= game.category.name -%>&nbsp;&nbsp;//&nbsp;&nbsp;Players: <%= game.players -%></span>
				</li>
	<% end %>
	</ul>
</div>

<style type="text/css">

	* {font-size: 16px !important; line-height: 120% !important;}
	h1 {font-size: 40px !important; line-height: 70px !important;}
	h3 {font-size: 20px !important; line-height: 20px !important;}
	  .columns {
	    column-count: 1;
	    -webkit-column-count: 1;
	    -moz-column-count: 1;
	  }
	  
	.item { width: 100%; box-sizing: border-box; position: relative;}
	p {margin-bottom: 3px !important; font-size: 11px !important;}
	li {border-bottom: 1px solid #000; padding: 8px; overflow: auto;}	 
	  
</style>